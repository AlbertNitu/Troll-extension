{
  "manifest_version": 2,

  "name": "Troll",
  "description": "Plays the John Cena theme when a page loads",
  "version": "1.0",

  "browser_action": {
    "default_icon": "Trollface.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "background"
  ],

  "background": {
    "scripts": ["backgroundimproved.js"]
  }

}
